        ":cloud:": "â˜ï¸",
        ":umbrella:": "â˜”ï¸",
        ":snowflake:": "â„ï¸",
        ":zap:": "âš¡ï¸",
        ":bell:": "ğŸ””",
        ":gift:": "ğŸ",
        ":birthday:": "ğŸ‚",
        ":tada:": "ğŸ‰",
        ":balloon:": "ğŸˆ",
        ":camera:": "ğŸ“·",
        ":book:": "ğŸ“š",
        ":computer:": "ğŸ’»",
        ":iphone:": "ğŸ“±",
        ":tv:": "ğŸ“º",
        ":moneybag:": "ğŸ’°",
        ":gem:": "ğŸ’",
        ":key:": "ğŸ”‘",
        ":hammer:": "ğŸ”¨",
        ":wrench:": "ğŸ”§",
        ":bulb:": "ğŸ’¡",
        ":lock:": "ğŸ”’",
        ":unlock:": "ğŸ”“",
        ":warning:": "âš ï¸",
        ":exclamation:": "â—ï¸",
