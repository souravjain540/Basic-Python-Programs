        ":ok_hand:": "ğŸ‘Œ",
        ":clap:": "ğŸ‘",
        ":muscle:": "ğŸ’ª",
        ":pray:": "ğŸ™",
        ":rocket:": "ğŸš€",
        ":earth:": "ğŸŒ",
